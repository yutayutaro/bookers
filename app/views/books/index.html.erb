


<h1>Books</h1>


<table>
  <thead>
  <tr>
   <th class="midashi">Title</th>
   <th class="midashi">Body</th>
   <th colspan= "3"></th>
   </tr>
   </thead>
  <% @books.each do |book| %>
   <tbody>
     <tr>
      
    <td class= "naiyo"><%= book.title  %></td>
    <td class= "naiyo"><%= book.body  %>  </td>
    <td class= "naiyo"><%= link_to "show", book_path(book.id) %></td>
  <td class= "naiyo"><%= link_to "edit", edit_book_path(book.id) %></td> 
   <td class="naiyo"><%= link_to "Destroy", book_path(book.id) ,method: :delete, "data-confirm" => "本当に削除しますか？" %> </td>
  </tr>
  </tbody>
  <% end %>
</table>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <div><%= f.submit 'Create Book' %></div>
<% end %>